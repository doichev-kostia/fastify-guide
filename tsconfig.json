{
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "ES2022.Error"
    ],
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "outDir": "./build",
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "types",
    "test"
  ]
}
