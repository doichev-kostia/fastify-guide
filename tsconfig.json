{
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "target": "es2022",
    "module": "es2022",
    "lib": [
      "ES2022.Error"
    ],
    "moduleResolution": "nodenext",
    "baseUrl": "./src",
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
}
